<% include ./partials/header %>
<div class="ui main text container">
         <div class="ui huge header" id="index">All Questions</div>
         <div class="ui top attached segment">
             <div class="ui divided items">
                    <% ques.forEach(function(ques){ %>
                        <div class="item" >

                            <div class="content">
                                <a class="header" >Q : <%= ques.question %></a>
                               
                                 <div class="field">
                                    <label>Options</label><br>
                                    <input type="radio"  name="selected"> <%=ques.option1%><br>
                                    <input type="radio"  name="selected"> <%=ques.option2%><br>
                                    <input type="radio"  name="selected"> <%=ques.option3%><br>
                                    <input type="radio"  name="selected"> <%=ques.option4%><br>
                                                         
                            </div>
                                
                            </div>
                           
                        </div>
                    
                    <% }) %>
             </div>
         </div>
         <br>
         <a class="ui violet basic large button" href="/">Submit</a><br><br>
</div>


<% include ./partials/footer %>
